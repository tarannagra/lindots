// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "vim_mode": true,
  "base_keymap": "VSCode",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Monospace dark" // install from extension store
  },
  "icon_theme": "Bearded Icon Theme", // install from extension store
  "cursor_shape": "bar",
  "ui_font_family": "Monaspace Krypton",
  "buffer_font_family": "Monaspace Radon",
  "buffer_font_features": {
    "calt": true,
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss08": true,
    "liga": true
  },
  "terminal": {
    "font_family": "Monaspace Radon",
    "font_features": {
      "calt": true,
      "ss01": true,
      "ss02": true,
      "ss03": true,
      "ss04": true,
      "ss05": false,
      "ss06": true,
      "ss07": true,
      "ss08": true,
      "liga": true
    },
    "shell": {
      "program": "zsh"
    }
  },
  // pane management
  "project_panel": {
    "button": true,
    "dock": "right",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "scrollbar": {
      "show": null
    }
  },
  "assistant": {
    "enabled": false,
    "button": false,
    "version": "1"
  },
  "lsp": {
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": false
          }
        }
      }
    }
  }
}
